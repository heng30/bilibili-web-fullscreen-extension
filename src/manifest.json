{
  "manifest_version": 2,
  "name": "Bilibili 网页全屏助手",
  "version": "0.1.0",
  "description": "自动点击Bilibili视频页面的网页全屏按钮。",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://www.bilibili.com/video/*"],
      "js": ["content.js"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "bilibili-web-fullscreen-helper@heng30.xyz"
    }
  },

  "permissions": ["activeTab"]
}
